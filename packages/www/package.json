{
  "name": "@ac-react-boilerplate/www",
  "version": "1.0.0",
  "main": "server.js",
  "description": "A serverless React SSR boilerplate built with React.js, styled-components, next.js, now",
  "author": "Abdullah Ceylan <ben@abdullahceylan.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "export NODE_ENV=production; next build",
    "start": "next start",
    "export": "node scripts/export.js",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "eslint --ignore-pattern '/node_modules/' */**.js",
    "heroku-postbuild": "yarn build",
    "now-build": "yarn build",
    "prettier": "prettier --write \"**/*.{html,js,jsx,json,md,yml}\"",
    "test": "yarn lint"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "next": "^9.1.1",
    "polished": "^3.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "styled-components": "^4.4.0",
    "styled-tools": "^1.7.1"
  },
  "devDependencies": {
    "@abdullahceylan/eslint-config-react": "^1.1.0",
    "@abdullahceylan/prettier-config": "^1.1.0",
    "@abdullahceylan/stylelint-config": "^1.1.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-react-element-info": "^1.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "stylelint": "^11.1.1",
    "webpack-bundle-analyzer": "^3.6.0"
  }
}
