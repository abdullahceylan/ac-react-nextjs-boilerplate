{
  "name": "ac-react-nextjs-boilerplate",
  "version": 2,
  "builds": [
    {
      "src": "packages/app/routes/**/*.js",
      "use": "@now/node",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "packages/www/package.json",
      "use": "@now/next"
    }
  ],
  "public": true,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/app/routes/api"
    },
    {
      "src": "/city/(?<name>[^/]+)$",
      "dest": "/packages/www/city?name=$name"
    },
    {
      "src": "/(.*\\.(js|jpg|json|css|ico|png)$)",
      "dest": "/packages/www/$1",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/packages/www/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    }
  ],
  "env": {
    "FB_PROJECT_ID": "your-project-id",
    "FB_AUTH_DOMAIN": "your-project-id.firebaseapp.com",
    "FB_API_KEY": "YOUR API KEY"
  },
  "build": {
    "env": {
      "FB_PROJECT_ID": "your-project-id",
      "FB_AUTH_DOMAIN": "your-project-id.firebaseapp.com",
      "FB_API_KEY": "YOUR API KEY"
    }
  
  }
}
